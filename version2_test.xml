				<input type="number" id="number_input" label="eine Zahl">3.1415</input>
			</fieldset>
			<fieldset id="sld">
				<slider id="slider1" label="x" min="10" max="50">33</slider>
				<slider id="slider2" label="länger"  min="1" max="10">1</slider>
