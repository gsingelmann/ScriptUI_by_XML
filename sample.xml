<?xml version="1.0" ?>
<root>
	<fieldset id="all" orientation="row">
		<fieldset id="main"> 
			<fieldset id="p1">
				<legend>Ein Panel</legend>
				<textarea id="ta" label="Mehrzeilig" />
			</fieldset>
			<fieldset id="sel">
				<select id="sel1" label="radios">
					<option>eins</option>
					<option>zwei</option>
					<option>drei</option>
				</select>
				<select id="sel2" label="dropdown">
					<option>eins</option>
					<option>zwei</option>
					<option>drei</option>
					<option>vier</option>
					<option>fünf</option>
					<option>sechs</option>
				</select>
				<select id="sel3" label="listbox" multiple="true">
					<option>eins</option>
					<option>zwei</option>
					<option>drei</option>
					<option>vier</option>
					<option>fünf</option>
					<option>sechs</option>
				</select>
			</fieldset>
			<fieldset id="tf">
				<legend>Texteingabefelder</legend>
				<input type="text" id="text_input" label="ein Text" var="eingabe">Das steht da</input>
				<input type="number" id="number_input" label="eine Zahl">3.1415</input>
			</fieldset>
			<fieldset id="sld">
				<slider id="slider1" label="x" />
				<slider id="slider2" label="länger" />
				<checkbox id="cb" label="eine Checkbox" />
			</fieldset>
		</fieldset>
		<fieldset valign="top">
			<button id="defaultElement" label="OK" />
			<button id="cancelElement" label="Abbrechen" />
			<button id="weissnich" label="Weiß nich" />
		</fieldset>
	</fieldset>

</root>